<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lista_degradado_layout"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_Inicial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/lista_degradado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_club" />

    <TextView
        android:id="@+id/tv_Inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="350dp"
        android:text="@string/utapp_tvinicio"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/utap_tv_inicio"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Inicial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>